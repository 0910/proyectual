%header
  .swiper-container
    .swiper-wrapper
      - @splashes.each do |splash|
        .swiper-slide{:style => "background-image: url(#{splash.image.url(:large)})"}
          .swiper-caption
            .swiper-caption-inner
              %p #{splash.title}
              = link_to(splash.link, class: 'btn btn-xl-noborder', target: '_blank') do
                .lines
                  .line.top
                  .line.right
                  .line.bottom
                  .line.left
                %h1
                  #{splash.call_to_action}
              %p
                #{splash.subtitle}
  .swiper-pagination

%section#about.grid.text-center.bg-white
  .container-fluid
    .row
      .col-lg-12
        %h2.section-heading PROYECTUAL
      .col-md-8.col-md-offset-2
        .section-body.section-box-alt
          %p
            PROYECTUAL es un equipo de profesionales vinculados al mundo de la música electrónica, que lleva organizando eventos de alta convocatoria como productores, promotores y mánagers de clubs desde 2005.
        = link_to "Mas info", about_index_path, class: 'btn-black btn-lg'

%section.grid.bg-light-gray
  .container-fluid
    .row.no-gutter
      - @news.each do |news|
        .col-xs-12.col-sm-6.col-md-3.grid-item
          - if news.images.empty?
            = link_to(news_path(news), class: 'grid-link') do
              .grid-hover
                .grid-hover-content
                  .lines
                    .line.top
                    .line.right
                    .line.bottom
                    .line.left
                  %p view
              = image_tag('image-not-available.jpg')
            .grid-caption.text-left
              %p.text-muted
                #{news.date.to_date.to_formatted_s(:long)}
              %h4
                #{news.title}
          - else
            - news.images.each do |image|
              - if image.cover == true
                = link_to(news_path(news), class: 'grid-link') do
                  .grid-hover
                    .grid-hover-content
                      .lines
                        .line.top
                        .line.right
                        .line.bottom
                        .line.left
                      %p view
                  .ph{:style => "background-image: url(#{image.file.url(:medium)})"}
                .grid-caption.text-left
                  %h4.text-muted
                    #{news.date.to_date.to_formatted_s(:long)}
                  %p
                    #{simple_format(truncate(news.title, :length => 40))}
  

:javascript
  $(document).ready(function(){
    var swiper = new Swiper('header .swiper-container', {
      pagination: 'header .swiper-pagination',
      paginationClickable: true,
      direction: 'vertical',
      autoplay: 5000,
      loop: true,
      speed: 1000
    });
    var swiper = new Swiper('.carousel .swiper-container', {
      pagination: '.carousel .swiper-pagination',
      slidesPerView: 3,
      paginationClickable: true,
      spaceBetween: 1,
      grabCursor: true
    });
  });