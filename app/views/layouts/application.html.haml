!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title
        Proyectual
      = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
      = csrf_meta_tags
      = yield(:head)

  %body{:class => "#{controller_name} #{action_name}"}
    %nav
      .container
        .no-gutter
          .col-xs-6.box.visible-xs
            = link_to(root_path, class: 'logo') do
              = image_tag('logo.png')
          .col-xs-6.col-sm-6.col-md-6.col-lg-5.box.hidden-xs
            .col-xs-9.col-sm-6.col-md-6
              = link_to(root_path, class: 'logo') do
                = image_tag('logo.png')
            .col-md-6.visible-lg
              %ul.list-inline.social-buttons-nav.pull-right
                %li
                  %p FOLLOW
                %li
                  .hline
                %li
                  = link_to "http://www.facebook.com/proyectual", :target => '_blank' do
                    %i.fa.fa-facebook
                %li
                  = link_to "https://www.instagram.com/proyectualbcn", :target => '_blank' do
                    %i.fa.fa-instagram
                %li
                  = link_to "https://twitter.com/proyectualbcn", :target => '_blank' do
                    %i.fa.fa-twitter
                %li
                  = link_to "https://www.youtube.com/user/proyectualtv", :target => '_blank' do
                    %i.fa.fa-youtube
          .col-xs-6.col-sm-4.col-md-6.col-lg-2.box.text-center
            %button.c-hamburger.c-hamburger--htx
              %span
                toggle menu
          .col-xs-12.col-sm-6.col-md-5.box.visible-lg
            .col-md-6
              %ul.list-inline.social-buttons-nav
                %li
                  %p LANG
                %li
                  .hline
                %li
                  = link_to "http://www.facebook.com/proyectual", :target => '_blank' do
                    %p ENG
                %li
                  = link_to "https://www.instagram.com/proyectualbcn", :target => '_blank' do
                    %p ESP
                %li
                  = link_to "https://twitter.com/proyectualbcn", :target => '_blank' do
                    %p CAT
            .col-md-6.visible-lg
              = link_to "STAY UPDATED", "http://www.residentadvisor.net/promoter.aspx?id=19688", class: 'btn btn-nav btn-sm pull-right'
	
    .menu
      .menu-inner
        .container
          .col-md-4.col-md-offset-2
            = link_to('Home', root_path)
            = link_to('Events', events_path)
            = link_to('News', news_index_path)
            = link_to('Artists', artists_path)
            = link_to('About', about_index_path)
          .col-md-4.hidden-xs
            %p
              Calle tanto 342
              %br
              Barcelona
              %br
              Spain
              %br
              -
              %br
              T +39 0873 349384
              %br
              M +39 0873 241284
              %br
              about@proyectual.info

    = yield
    %footer.no-gutter
      .container-fluid
        .row
          .col-md-1.text-left.hidden-xs
            = link_to(root_path, class: 'logo') do
              = image_tag('logo_footer.png')
          .col-md-5.text-left.footmenu
            .row
              = link_to('Home', root_path)
              = link_to('Events', events_path)
              = link_to('News', news_index_path)
              = link_to('Artists', artists_path)
              = link_to('About', about_index_path)
            .row
              %span.copyright
                Â© Proyectual 2016.
                = link_to 'http://www.wemakenoise.co', target: '_blank' do
                  Made with
                  %i.fa.fa-heart
                  by NOISE

          .col-md-6.text-right.hidden-xs
            %ul.list-inline.social-buttons
              %li
                = link_to "http://www.facebook.com/proyectual", :target => '_blank' do
                  %i.fa.fa-facebook
              %li
                = link_to "https://www.instagram.com/proyectualbcn", :target => '_blank' do
                  %i.fa.fa-instagram
              %li
                = link_to "https://twitter.com/proyectualbcn", :target => '_blank' do
                  %i.fa.fa-twitter
              %li
                = link_to "https://www.youtube.com/user/proyectualtv", :target => '_blank' do
                  %i.fa.fa-youtube
              %li
                = link_to "https://vimeo.com/user13110331", :target => '_blank' do
                  %i.fa.fa-vimeo

:javascript
  $('.c-hamburger').click(function(){
    $(this).toggleClass('is-active');
    $('.menu').toggleClass('active').fadeToggle("slow", "linear");
    if($(window).scrollTop() > 100){
      $('nav').toggleClass('shrink');
    }
  });
  $('body').jpreLoader({
    loaderVPos: '0%',
    autoClose: true,
    showPercentage: false,
  }, function() {
		
  });
  $(window).on('scroll', function(){
    if ($(this).scrollTop() > 100){
      $('nav').addClass('shrink');
    }
    else {
      $('nav').removeClass('shrink');
    }
  });
