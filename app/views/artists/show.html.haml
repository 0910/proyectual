%section.grid.bg-light-gray
  .container-fluid
    .row.no-gutter
      - @artist.events.each do |event|
        .col-md-3.col-sm-6.grid-item
          - if event.images.empty?
            = link_to(event_path(event), class: 'grid-link') do
              .grid-hover
                .grid-hover-content
                  .lines
                    .line.top
                    .line.right
                    .line.bottom
                    .line.left
                  %p
                    #{event.name}
              = image_tag('image-not-available.jpg')
          - else
            - event.images.each do |image|
              - if image.cover == true
                = link_to(event_path(event), class: 'grid-link') do
                  .grid-hover
                    .grid-hover-content
                      .lines
                        .line.top
                        .line.right
                        .line.bottom
                        .line.left
                      %p
                        #{event.name}
                  .ph{:style => "background-image: url(#{image.file.url(:medium)})"}

:javascript
  $(document).ready(function(){
    var swiper = new Swiper('.swiper-container', {
      pagination: '.swiper-pagination',
      paginationClickable: true,
      autoplay: 5000,
      loop: true,
      speed: 1000
    });
  });