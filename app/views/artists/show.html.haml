%section.grid
  .container-fluid
    .row.no-gutter.bg-light-gray
      .col-md-4.section-subinfo
        .section-box
          %h2.section-heading.no-margin
            #{@artist.name}
          .section-body
            #{simple_format(truncate(@artist.name, :length => 280))}
          %ul.list-inline.social-buttons
            %li
              = link_to(@artist.website) do
                %i.fa.fa-web
            %li
              = link_to(@artist.soundcloud) do
                %i.fa.fa-soundcloud
            %li
              = link_to(@artist.resident_advisor) do
                %i.fa.fa-instagram
            %li
              = link_to(@artist.facebook) do
                %i.fa.fa-facebook
      .col-md-8.slider
        .swiper-container
          .swiper-wrapper   
            - if @artist.images.empty?
              .swiper-slide{:style => "background-image: image-url('image-not-available.jpg')"}
            - else
              - @artist.images.each do |image|
                .swiper-slide{:style => "background-image: url(#{image.file.url(:large)})"}
        .swiper-pagination
%section#about.grid.text-center.bg-white
  .container-fluid
    .row
      .col-lg-12
