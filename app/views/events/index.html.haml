%section#events.grid.bg-grey
  .no-gutter.splashes
    .col-md-12.header.text-center
      %h1.section-heading.vcenter
        Events
      .gradient
  .container
    - @years.each do |year|
      .year
        .row
          .col-md-2.col-md-offset-5.hexagon.text-center
            %h2.section-heading #{year.name}
        .row
          .vert-line
        .row
          .no-gutter
            - year.events.each do |event|
              .col-xs-12.col-sm-6.col-md-12.grid-item
                - if event.images.empty?
                  .row.no-gutter
                    = link_to(event_path(event), class: 'col-md-6 grid-link') do
                      .grid-hover
                        .grid-hover-content
                          .lines
                            .line.top
                            .line.right
                            .line.bottom
                            .line.left
                          %p read more
                      .ph.image-not-available
                    .col-md-6.grid-caption.text-left
                      %h4
                        #{truncate(event.name, :length => 40)}
                      %p
                        #{event.description}
                - else
                  - event.images.each do |image|
                    - if image.cover == true
                      .row.no-gutter
                        = link_to(event_path(event), class: 'col-md-6 grid-link') do
                          .grid-hover
                            .grid-hover-content
                              .lines
                                .line.top
                                .line.right
                                .line.bottom
                                .line.left
                              %p read more
                          .ph{:style => "background-image: url(#{image.file.url(:medium)})"}
                        .col-md-6.grid-caption.text-left
                          %h4
                            #{truncate(event.name, :length => 40)}
                          %p
                            #{event.description}
        .row
          .vert-line
    .row
      .col-md-2.col-md-offset-5.text-center
        %a.gotop
