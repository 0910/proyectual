%section.grid
  .container-fluid
    .row.no-gutter.bg-light-gray
      .col-md-4.section-subinfo
        .section-box
          %h4.section-subheading
            #{@news.date.to_date.to_formatted_s(:long)}
          %h2.section-heading.no-margin
            #{@news.title}
          .section-body
            #{simple_format(truncate(@news.body, :length => 280))}
      .col-md-8.slider
        .swiper-container
          .swiper-wrapper   
            - if @news.images.empty?
              .swiper-slide{:style => "background-image: image-url('image-not-available.jpg')"}
            - else
              - @news.images.each do |image|
                .swiper-slide{:style => "background-image: url(#{image.file.url(:large)})"}
        .swiper-pagination
        .swiper-button-next.swiper-button-white
        .swiper-button-prev.swiper-button-white
%section.grid
  .container-fluid
    .row.no-gutter
      .col-md-8
        .section-box
          .section-body
            #{simple_format(@news.body)}
      .col-md-4.section-subinfo.bg-darkest-gray
        .section-box
          %h4.section-subheading
            Share this article
          .section-links
            %ul.list-inline.social-buttons
              %li
                = link_to('#') do
                  %i.fa.fa-facebook
              %li
                = link_to('#') do
                  %i.fa.fa-twitter
              %li
                = link_to('#') do
                  %i.fa.fa-google

          %h4.section-subheading
            Related Tags
          .section-links
            = link_to('off at sonar', '#')
:javascript
  $(document).ready(function(){
    var swiper = new Swiper('.swiper-container', {
      pagination: '.swiper-pagination',
      paginationClickable: true,
      nextButton: '.swiper-button-next',
      prevButton: '.swiper-button-prev',
      autoplay: 5000,
      loop: true,
      speed: 1000
    });
  });